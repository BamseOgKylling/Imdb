<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imdb</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/start.css" />
    <script defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-fluid">
        <!-- ---------------------------------------------------- -->
        <!-- Site header                                          -->
        <!-- ---------------------------------------------------- -->
        <header class="site-header row mb-2">


            <nav class="navbar navbar-light bg-light">
                <div class="container-fluid">
                    <nav class="navbar-brand me-auto" href="/">
                        <img src="https://via.placeholder.com/160x80.png?text=Logo"
                             alt="" />
                    </nav>
                    <form class="d-flex" asp-controller="SearchResults" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="q">                        
                    </form>
                    <partial name="_LoginPartial" />                   
                </div>
            </nav>

        </header>

        <main>
            @RenderBody()
        </main>

        <!-- ---------------------------------------------------- -->
        <!-- Site footer                                          -->
        <!-- ---------------------------------------------------- -->
        <footer class="bg-light site-footer text-center">&copy; IMDb</footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
